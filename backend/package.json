    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "worker": "ts-node src/workers/processor.ts",
    "seed": "ts-node seed.ts",
    "seed:admin": "ts-node src/scripts/createAdmin.ts",
    "seed:worker": "ts-node src/scripts/createWorkerUser.ts",
    "clear:db": "ts-node src/scripts/clearDatabase.ts",
    "clear:turns": "ts-node src/scripts/clearTurns.ts",
    "fix:index": "ts-node src/scripts/dropWorkerIdIndex.ts",
    "open:areas": "ts-node src/scripts/openServiceAreas.ts",
    "lint": "eslint . --ext .ts"
  },
  "keywords": [
    "queue",
    "job",
    "mongodb",
    "worker"
